<?php $logs = $this->getLogs(); ?>

<?php foreach ($logs as $file => $logs): ?>
    <?php $row = 0; ?>
    <table class="debug-logs">
        <thead>
            <tr>
                <th><?php echo $file ?></th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($logs as $content) : ?>
                <tr class="<?php echo(($row % 2) ? 'djDebugOdd' : 'djDebugEven') ?>">
                    <td>
                        <?php echo $content ?>
                    </td>
                </tr>
                <?php $row++; ?>
            <?php endforeach; ?>
        </tbody>
    </table>
<?php endforeach; ?>
